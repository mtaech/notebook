baseURL = "blog.jethorse.com"
defaultContentLanguage = "zh-cn"
defaultContentLanguageInSubdir = false
title = "JetHorse"
theme = "notebook"
enableRobotsTXT = true
enableEmoji = true
enableGitInfo = true
hasCJKLanguage = true
paginate = 10
#disqusShortname = ""
#googleAnalytics = ""

[imaging]
quality = 75

[author]
name = "mtaech"

[sitemap]
changefreq = "weekly"
priority = 0.5
filename = "sitemap.xml"

[params]
keywords = []
description = ""
ampLogo = ""
# Site creation time
since = "2021"
paginate = 10
# The date format to use; for a list of valid formats, see https://gohugo.io/functions/format/
dateFormatToUse = "2006/01/02"
# Whether display TOC or not.
toc = true
googleVerification = ""
icp = ""

[params.git]
name = "Notebook"
repo = "https://github.com/mtaech/notebook"
branch = "main"

[mediaTypes]
[mediaTypes."text/plain"]
suffixes = ["md"]



[markup]
[markup.tableOfContents]
startLevel = 2
[markup.goldmark.renderer]
unsafe = true
[markup.highlight]
anchorLineNos = true
codeFences = true
guessSyntax = true
hl_Lines = ''
lineAnchors = ''
lineNoStart = 1
lineNos = true
lineNumbersInTable = false
noClasses = false
noHl = false
style = 'monokai'
tabWidth = 4

